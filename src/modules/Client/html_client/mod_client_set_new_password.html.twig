{% extends "layout_public.html.twig" %}

{% block meta_title %}{{ 'Set a new password'|trans }}{% endblock %}

{% block body_class %}page-set-new-password{% endblock %}
{% block body %}

<section class="container login" role="main">

{% if settings.login_page_show_logo %}
    {% set company = guest.system_company %}
    <h1 style="text-align: center">
        {% if settings.login_page_show_logo %}
        <a href="{{ settings.login_page_logo_url|default('/') }}" target="_blank">
            <img src="{{ guest.system_company.logo_url }}" alt="{{ guest.system_company.name }}"/>
        </a>
        {% endif %}

    </h1>
{% endif %}
    <h2>{{ 'Reset password'|trans }}</h2>

        <div class="page page-center">
        <div class="data-container-tight">
            <div class="card card-md">
                <div class="card-body">
                    <p class="text-muted mb-4">{{ 'Update your password' | trans }}</p>
                    <form class="api-form" action="{{ 'api/guest/client/update_password'|link }}" method="post" data-api-redirect="{{ 'index'|alink }}">
                        <input type="hidden" name="CSRFToken" value="{{ CSRFToken }}"/>
                        <input type="hidden" name="hash" value="{{ data.hash }}"/>
                        <div class="mb-3">
                            <label class="form-label" for="inputPassword">{{ 'New Password' | trans }}</label>
                            <input class="form-control"
                                   id="inputPassword"
                                   type="password"
                                   name="password"
                                   placeholder="{{ 'Enter your new password' | trans }}"
                                   required
                                   autofocus>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="inputPassword2">{{ 'Repeat New Password' | trans }}</label>
                            <input class="form-control"
                                   id="inputPassword2"
                                   type="password"
                                   name="password_confirm"
                                   placeholder="{{ 'Repeat your new password' | trans }}"
                                   required
                                   autofocus>
                        </div>
                        <div class="form-footer">
                            <button class="btn btn-block btn-large btn-inverse btn-alt" type="submit">
                                <svg class="icon">
                                    <use xlink:href="#mail" />
                                </svg>
                                {{ 'Update password' | trans }}
                            </button>
                        </div>
                    </form>
                </div>
            </div>
            <ul class="login-footer">
                <li><a href="{{ 'signup'|link }}"><small>{{ 'Sign Up'|trans }}</small></a></li>
                <li><a href="{{ 'login'|link }}"><small>{{ 'Login'|trans }}</small></a></li>
            </ul>
        </div>
    </div>


</section>
{% endblock %}

{% block js %}
<script type="text/javascript">
$(function() {
    $('#password-reset').on('submit', function(event) {
        bb.post(
            'guest/client/reset_password',
            $(this).serialize(),
            function(result) {
                bb.msg("{{ 'A password reset confirmation email will be sent to you if we found an account with that email address.'|trans }}");
            }
        );

        return false;
    });
});
</script>
{% endblock %}
